<%- include("../partials/header")%>
    <%- include("../partials/navbar")%>



        <div class="container" style="border: 2px solid #ccc;margin-top:3rem;width:80vw;height: 70vw;box-shadow: 3px 2px 5px gray;">

            <form class="validated-form" action="/blogs" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <div class="mb-3">
                    <label for="heading" class="form-label">Flower Name</label>
                    <input type="text" class="form-control" id="heading" placeholder="Blog Title" name="blog[heading]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="img" placeholder="Image URL" name="blog[img]" required>
                    <div class="invalid-feedback">
                        Enter Valid URL
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>


                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="30" rows="5" name="blog[desc]" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
            </form>


        </div>



        <%- include("../partials/footer")%>